<?xml version="1.0" encoding="utf-8"?>
<Content Version = "3">
	<FilePathGroup>
		<CompilerAssembly Include="$(BuildContentInstallDir)\Playroom.Compilers.dll" />
	</FilePathGroup>

	<!-- PinboardToCsCompiler -->

	<Target 
		Name="ExampleRectangles"
			Inputs="$(InputDir)\*.pinboard"
			Outputs="$(OutputDir)\$(TargetName).cs">
		<PropertyGroup>
			<Namespace>Company.Product</Namespace>
		</PropertyGroup>
	</Target>

	<!-- PinboardToJsonCompiler -->

	<Target
		Name="ExamplePinboardJson"
		Inputs="$(InputDir)\Example.pinboard"
		Outputs="$(OutputDir)\$(TargetName).json">
	</Target>

	<!-- ResxToStringsCompiler -->

	<Target
		Name="ExampleResx"
		Inputs="$(InputDir)\Example.resx"
			Outputs="$(OutputDir)\$(TargetName).strings">
	</Target>

	<!-- StringsToJsonAndCsCompiler -->

	<Target
		Name="ExampleStrings2"
		Inputs="$(InputDir)\Example.strings"
		Outputs="$(OutputDir)\$(TargetName).cs;$(OutputDir)\$(TargetName).json">
		<PropertyGroup>
			<Namespace>Company.Product</Namespace>
		</PropertyGroup>
	</Target>
	
	<!-- PngToPngCompiler -->
	
	<Target
		Name="ExamplePng"
		Inputs="$(InputDir)\Example.png"
		Outputs="$(OutputDir)\$(TargetName).png">
	</Target>
	
	<!-- SvgAndPinboardToPngCompiler -->

	<Target
		Name="ExampleSvgPinboardPng"
		Inputs="$(InputDir)\Example.svg;$(InputDir)\Example.pinboard"
		Outputs="$(OutputDir)\$(TargetName).png">
		<PropertyGroup>
			<Rectangle>Thing</Rectangle>
		</PropertyGroup>
	</Target>
	
	<!-- SvgToPngCompiler -->

	<Target
		Name="ExampleSvgPng"
		Inputs="$(InputDir)\Example.svg"
		Outputs="$(OutputDir)\$(TargetName).png">
		<PropertyGroup>
			<Width>100</Width>
			<Height>100</Height>
		</PropertyGroup>
	</Target>
	
	<!-- SvgAndPinboardToPngCompiler -->

	<Target
		Name="ExampleSvgPinboardPng"
		Inputs="$(InputDir)\Example.svg;$(InputDir)\Example.pinboard"
		Outputs="$(OutputDir)\$(TargetName).png">
		<PropertyGroup>
			<Rectangles>Thing</Rectangles>
		</PropertyGroup>
	</Target>
	
	<!-- SvgToPdfAndXnbCompiler -->

	<Target
		Name="ExampleSvgPdfPng"
		Inputs="$(InputDir)\Example.svg"
		Outputs="$(OutputDir)\$(TargetName).pdf;$(OutputDir)\$(TargetName).png">
		<PropertyGroup>
			<Pinboard>Example</Pinboard>
			<Rectangle>Screen</Rectangle>
		</PropertyGroup>
	</Target>
	
	<!-- WavToWavCompiler -->

	<Target
		Name="ExampleWavWav"
		Inputs="$(InputDir)\Example.wav"
		Outputs="$(OutputDir)\$(TargetName).wav"/>
	
</Content>
